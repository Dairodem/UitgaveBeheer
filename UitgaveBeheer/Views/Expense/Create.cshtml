@model ExpenseCreateViewModel

@{

    string[] CategorieArr = new string[] { "Wagen", "Energie", "Boodschappen", "Huis", "Andere" };
}


<form asp-controller="Expense" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Omschrijving">Omschrijving:</label>
        <input class="form-control" asp-for="Omschrijving" />
        <span class="text-danger" asp-validation-for="Omschrijving"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bedrag">Bedrag:</label>
        <input class="form-control" asp-for="Bedrag" />
        <span class="text-danger" asp-validation-for="Bedrag"></span>
    </div>
    <div class="form-group">
        <label asp-for="Datum">Datum:</label>
        <input class="form-control" asp-for="Datum" />
        <span class="text-danger" asp-validation-for="Datum"></span>
    </div>
    <div class="form-group">
        <label asp-for="Categorie">Categorie:</label>
        <select class="form-control" asp-for="Categorie">
            @for (int i = 0; i < CategorieArr.Length; i++)
            {
                <option value="@CategorieArr[i]">@CategorieArr[i]</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Categorie"></span>
    </div>
    <button class="btn btn-primary" type="submit">Bevestig</button>

</form>